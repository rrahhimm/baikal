doctype html
html(lang="ru")
	head
		meta(charset="UTF-8")
		meta(name="viewport" content="width=device-width, initial-scale=1.0")
		meta(name="author" content="rahim")
		meta(name="description" content="Бронирование недорогих номеров в гостинице Байкал.")
		title Baikal
		link(rel="stylesheet" href="css/styles.css")
		script(src="js/script.js" defer)
	body
		include partials/_script
		include partials/_header

		main.main
			section#intro
				.container.intro__container.flex
					.intro__content
						h1.intro__title Байкал
						p.intro__descr.descr Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
						button.book-button(type="button") Забронировать
					img.intro__img(src="images/intro-img.svg" width="706" height="602" alt="мултяшное изображение гостиницы")

			section#about
				.container
					h2.h2-title О гостинице
					.about__flex
						.about__content
							p.about__descr.descr Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
							p.about__descr.descr Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
							img.about__decor(src="icons/selection-icon-blue.svg" alt="")
						img.about__img(src="images/about-img.svg" width="810" height="467" alt="мултяшное изображение ресепшена")

			section#benefits
				.container
					h2.h2-title Мы предлагаем
					ul.benefits__list
						each i in benefitsItemsContent
							li.benefits__item
								.benefits__item-wrapper
									img.benefits__img(src="icons/benefits/" + i.path + ".svg" loading="lazy" height="65" alt="")
									h3.benefits__item-title.h3-title= i.name
									p.benefits__descr.descr= i.content

			section#price
				.container
					h2.h2-title Наши номера
					.price__cards-wrapper
						article.price-card
							img.price-card__img(src="images/price/single-room.svg" height="110" alt="")
							h3.h3-title Одноместный номер
							ul.price-card__services
								li.price-card__service Душ
								li.price-card__service Кровать
								li.price-card__service Телевизор
								li.price-card__service Wi-Fi
								li.price-card__service Что-то ещё
								li.price-card__service Что-то ещё
							div
								h4.h4-title Стоимость
								.price-card__price
									span 1000Р /
									|  сутки

						article.price-card
							img.price-card__img(src="images/price/double-room.svg" alt="" height="110")
							h3.h3-title Двухместный номер
							ul.price-card__services
								li.price-card__service Душ
								li.price-card__service Кровать
								li.price-card__service Телевизор
								li.price-card__service Wi-Fi
								li.price-card__service Что-то ещё
								li.price-card__service Что-то ещё
							div
								h4.h4-title Стоимость
								.price-card__price
									span 2000Р /
									|  сутки

			section#reviews
				.container
					h2.h2-title Ваши отзывы
					.reviews__row
						each review in reviewsList
							article.review-card
								img.review-card__avatar(src="images/reviews/" + review.avatarPath width="100" height="100" alt="аватар " + review.name)
								h4.review-card__title.h4-title= review.name
								p.review-card__descr.descr= review.text
								time.review-card__date(datetime=review.date.year + "-" + review.date.month + "-" + review.date.day) #{review.date.day}.#{review.date.month}.#{review.date.year}

			section#contacts
				.container
					.map__wrapper
						img.map(src="images/map-img.jpg" loading="lazy" height="503" alt="карта местности")
						.map__content
							h2.contacts__title.h2-title Контакты
							.contacts__address-block.address-block
								span Адрес:
								address Кайдаловская ул., 37, Чита
							.contacts__phone-block.phone-block
								a(href="tel:+73022217856") +73022217856
								a(href="tel:+79294830255") +79294830255
							ul.contacts__social.social
								li.social__item
									a.social__link.social__link-viber(href="https://www.viber.com/" style="background-image: url('../icons/viber.svg');" target="_blank" aria-label="перейти в Viber")
								li.social__item
									a.social__link.social__link-whatsapp(href="https://www.whatsapp.com/" style="background-image: url('../icons/whatsapp.svg');" target="_blank" aria-label="перейти в WhatsApp")

		include partials/_footer
